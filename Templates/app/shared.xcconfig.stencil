// ===== PROJECT CONFIGURATION =====
// Base Bundle Identifier - all targets will append to this
// Example: com.mycompany → com.mycompany.myapp, com.mycompany.framework, etc.
BASE_BUNDLE_IDENTIFIER = {{ bundleId }}
PRODUCT_BUNDLE_IDENTIFIER = $(BASE_BUNDLE_IDENTIFIER)

// Development Team ID for automatic code signing
// Get this from Apple Developer Portal → Membership
DEVELOPMENT_TEAM = {% if teamId %}{{ teamId }}{% elif team-id %}{{ team-id }}{% endif %}

// ===== PLATFORM SETTINGS =====
{% if platform == "macos" %}
// macOS specific settings
MACOSX_DEPLOYMENT_TARGET = 12.0
SUPPORTS_MACCATALYST = NO
TARGETED_DEVICE_FAMILY = 2
{% elif platform == "watchos" %}
// watchOS specific settings  
WATCHOS_DEPLOYMENT_TARGET = 8.0
TARGETED_DEVICE_FAMILY = 4
{% elif platform == "tvos" %}
// tvOS specific settings
TVOS_DEPLOYMENT_TARGET = 15.0
TARGETED_DEVICE_FAMILY = 3
{% else %}
// iOS specific settings
IPHONEOS_DEPLOYMENT_TARGET = 15.0
SUPPORTS_MACCATALYST = NO
TARGETED_DEVICE_FAMILY = 1,2
{% endif %}

// ===== SHARED BUILD SETTINGS =====
// Code signing style (Automatic recommended)
CODE_SIGN_STYLE = Automatic

// Swift version configuration
SWIFT_VERSION = 5.0
SWIFT_MAX_VERSION_1500 = 5.0
SWIFT_MAX_VERSION_1600 = 6.0
SWIFT_MAX_VERSION = $(SWIFT_MAX_VERSION_$(XCODE_VERSION_MAJOR))

// Marketing version
MARKETING_VERSION = 1.0

{% if platform == "macos" %}
// macOS security settings
ENABLE_HARDENED_RUNTIME = YES
{% endif %}

// Build settings
ENABLE_USER_SCRIPT_SANDBOXING = NO